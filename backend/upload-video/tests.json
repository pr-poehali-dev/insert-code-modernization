{
  "tests": [
    {
      "name": "Upload video successfully",
      "method": "POST",
      "path": "/",
      "body": {
        "video": "base64videodata",
        "description": "Test video description",
        "hashtags": "#test #video",
        "username": "testuser"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "video_id": "string",
        "message": "string",
        "metadata": {
          "video_id": "string",
          "username": "string",
          "description": "string",
          "hashtags": "string",
          "likes": 0,
          "comments": 0,
          "views": 0
        }
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Missing video file returns error",
      "method": "POST",
      "path": "/",
      "body": {
        "description": "Test without video"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "Video file is required"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "OPTIONS request for CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200
    }
  ]
}
